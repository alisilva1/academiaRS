{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/professor">
    
    <section 
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/9647150/500x500) no-repeat center center / cover"></section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                type="url"
                name= "avatar_url"
                placeholder="http://"
                >
            </div>

        <div>
            
        <div class="item">
            <div>Instrutor</div>
            <div>
                <input 
                type="text"
                name= "name"
                placeholder="Nome do instrutor"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de Nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" value= "M" checked>Masculino</span>
                <span><input type="radio" name="gender" value= "F">Feminino</span>
                <span><input type="radio" name="gender" value= "O">Outro</span>
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                type="text" 
                name="services"
                placeholder="Separe os serviços prestados por virgula">
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>

{% endblock content %}