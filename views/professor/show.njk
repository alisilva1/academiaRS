{% extends "layout.njk" %}

{% block content %}

<div class="card">
    
    <section 
    class="avatar" 
    style="background: {{professor.avatar_url}} no-repeat center center / cover"></section>

    <section class="details">

        <h3>Detalhes</h3>
        
        <div class="item">
            <div>Instrutor</div>
            <div>{{professor.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{professor.age}}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{professor.gender}}</div>
        </div>

        <div class="item">
            <div>Especialidades</div>
            <div>
                {% for service in professor.services%}
                <span>{{service}}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{professor.criado_em}}</div>
        </div>

    </section>
</div>

{% endblock content %}